<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <filter>
        <filter-name>SceneryFilter</filter-name>
        <filter-class>br.com.devx.scenery.web.SceneryFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SceneryFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ConfigServlet</servlet-name>
        <servlet-class>br.com.devx.scenery.web.ConfigServlet</servlet-class>
        <init-param>
            <param-name>templateHandlers</param-name>
            <param-value>br.com.devx.scenery.web.JspTemplateHandler, br.com.devx.scenery.web.VelocityTemplateHandler</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>ConfigServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
